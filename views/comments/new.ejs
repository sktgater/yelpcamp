<% include ../partials/header %>

<div class="container">
    <!-- Grid System -->
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
